#include <iostream> 
using namespace std;

int main() {

   string myOutput = "";
   int myNumber = 6;
   myOutput = (myNumber % 2 == 0) ? "Even" : "Odd";
   cout << myOutput << endl; 

   if (myNumber % 2 == 0) {
   cout << myNumber << " is even" << endl;
   }
   
   else
   cout << myNumber << " is odd" << endl;
   
   return 0;
}
