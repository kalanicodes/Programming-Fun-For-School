//Program outputs a message to the student based on their grade

#include <iostream>
using namespace std;

int main () {
   // local variable declaration:
   char grade = 'A';

   cout << "Enter a valid grade using capitol letters: ";
   cin >> grade;

   switch(grade) {
      case 'A' :
         cout << "Excellent!" << endl;
         break;
      case 'B' :
      case 'C' :
         cout << "Well done" << endl;
         break;
      case 'D' :
         cout << "You passed" << endl;
         break;
      case 'F' :
         cout << "Better try again" << endl;
         break;
      default :
         cout << "Invalid grade" << endl;
   }
   cout << "Your grade is " << grade << endl;

   return 0;
}
